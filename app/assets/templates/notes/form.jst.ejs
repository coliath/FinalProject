
<%
if ( note.get('private') ) {
  var checked = "checked";
} else {
  var checked = "";
}
if ( note.isNew() ) {
  var buttonLabel = "Add";
  var header = "Create Note";
} else {
  var buttonLabel = "Save";
  var header = "Edit Note";
}

%>

<div class="modal fade" id="note-form-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title"><%= header %></h4>
      </div>
      <form>
        <div class="modal-body note-modal-form">
          
            <label> Source Text
              <% if ( note.get("section_text") ) { %>
                <p class="section-text"><%= note.escape("section_text") %></p>
              <% } else { %>
                <p class="section-text">None. To add a note with source text, create the note using the highlighting tool.</p>
              <% } %>    
            </label>

            <label> My Note
              <textarea name="note[body]"><%= note.escape("body") %></textarea>
            </label>

            <div class="group">
                <input id="note-private" type="checkbox" name="note[private]" <%= checked %>>
                <label class="check-label" for="note-private">Private?</label>
            </div>
          
        </div>

        <div class="modal-footer">
          <button type="button" class="submit-note btn-blue"><%= buttonLabel %></button>
        </div>
      </form>

    </div>
  </div>
</div>