
<div class="form-wrapper">
  <div class="form-box">

    <form class="sign-up-form" action="<%= users_url %>" method="post">

      <h1 class='form-title'>Sign Up</h1>

      <input
         name="_method"
         type="hidden"
         value="POST">
      <input
         name="authenticity_token"
         type="hidden"
         value="<%= form_authenticity_token %>">

      <input
         id="user_username"
         name="user[username]"
         type="text"
         placeholder="Select A Username"
      >

      <input
         id="user_password"
         name="user[password]"
         type="password"
         placeholder="Select A Password"
      >

      <input class="btn-blue" type="submit" value="Start Reading!">
    </form>

  </div>

  <p> Already have an account? <%=  link_to "Sign In", new_session_url %></p>

</div>